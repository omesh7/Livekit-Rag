{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:ListBucket",
                "s3:GetObject",
                "s3:PutObject",
                "s3:GetBucketLocation",
                "s3:ListAllMyBuckets"
            ],
            "Resource": [
                "arn:aws:s3:::demo-vector-bucket-portfolio",
                "arn:aws:s3:::demo-vector-bucket-portfolio/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3vectors:CreateVectorIndex",
                "s3vectors:DescribeVectorIndex",
                "s3vectors:PutVectors",
                "s3vectors:QueryVectors",
                "s3vectors:GetVectors",
                "s3vectors:DeleteVectors",
                "s3vectors:ListVectorIndexes"
            ],
            "Resource": [
                "arn:aws:s3vectors:*:*:bucket/demo-vector-bucket-portfolio",
                "arn:aws:s3vectors:*:*:bucket/demo-vector-bucket-portfolio/*"
            ]
        }
    ]
}